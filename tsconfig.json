{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["./env.d.ts", "node", "react", "react-dom"]
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", "**/*.tsx", 
    ".next/types/**/*.ts", 
    "tailwind.config.ts", 
    "src/types/react.d.ts",
    "src/types/content.d.ts",
  ],

  "exclude": ["node_modules"]
}
